$row-height = 40

.json-schema-builder

  ul,li
    list-style-type: none
    padding: 0
    margin: 0

  .js-row
    background: #f8faff
    border: 1px solid #dae2ea
    color: #7c9eb2
    padding: 0
    margin-bottom: .7rem
    position: relative;
    overflow: hidden
    &:hover
      color: #438eb9
      background: #f4f6f7
      border-color: #dce2e8
      .model-icons
        right: 0
      .model-type
        opacity: 1 !important
    .model-title:hover, .model-title:focus
      + .model-icons
        right: 0
    .model-title:focus
      background-color: white
    &.t_bg
      opacity: 1
      color: #438eb9
      background: #f4f6f7
      border-color: #dce2e8
      box-shadow: 2px 2px 3px rgba(0,0,0,0.2)
      input, .obj-exp
        color: white
      .model-title:focus
        // background-color: white
        color: #666
      color: #666
      .model-icons
        right: 0
      .model-type
        opacity: 1 !important


    .model-icons
      transition: all 0.2s ease-out
      position: absolute
      z-index: 999
      top: 0rem
      right: -10.4rem
      height: 4rem
      font-size: 2rem
      text-align: right
      background-color: white
      line-height: 4.3rem;
      .model-info, .model-actions
        height: 4rem
        display: inline-block
        border: 1px solid #dae2ea
        border-right: 0
        border-top: 0
        border-bottom: 0
        padding: 0 1.5rem
        .disabled
          opacity: .3
        .glyphicon:not(.model-comment):hover
          cursor: pointer
      .model-type
        position: relative
        top: -0.3rem
        line-height: 1
        opacity: 0.3
        .object-prop-count
          font-size: 1.3rem

